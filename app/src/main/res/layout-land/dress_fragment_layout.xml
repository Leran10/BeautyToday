<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:layout_height="500dp"
              android:background="#FFBCD9"
              tools:context="com.bignerdranch.android.beautytoday20.coatFragment"
              android:orientation = "horizontal">

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="206dp"
              android:layout_height="200dp"
              android:background="#FFBCD9"
              tools:context="com.bignerdranch.android.beautytoday20.coatFragment"
              android:orientation = "vertical">


    <Spinner
        android:id="@+id/colorSpinner"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        />

    <Spinner
        android:id="@+id/patternSpinner"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        />

    <Spinner
        android:id="@+id/materialSpinner"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        />

    <Spinner
        android:id="@+id/styleSpinner"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        />

    <Spinner
        android:id="@+id/sleevesSpinner"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        />

    <Spinner
        android:id="@+id/lengthSpinner"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        />

</LinearLayout>

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                  xmlns:tools="http://schemas.android.com/tools"
                  android:layout_width="match_parent"
                  android:layout_height="300dp"
                  android:background="#FFBCD9"
                  tools:context="com.bignerdranch.android.beautytoday20.coatFragment"
                  android:orientation = "vertical">


    <ImageView
        android:id = "@+id/img"
        android:layout_height = "100dp"
        android:layout_width="100dp"
        android:scaleType="fitCenter"
        android:adjustViewBounds="true"
        android:background = "@drawable/dressborder"
        android:maxWidth="100dp"
        android:maxHeight="100dp"
        android:padding = "10dp"
        android:layout_gravity = "center"
        android:layout_weight="0.60"
        />

    <ImageButton
        android:id="@+id/camera"
        android:layout_width="50dp"
        android:layout_height="30dp"
        android:background="@drawable/dresscamera"
        android:layout_gravity = "center"
        android:text="@string/camera"/>

    <ImageButton
        android:id="@+id/choose"
        android:layout_width="50dp"
        android:layout_height="30dp"
        android:background="@drawable/dressgallary"
        android:layout_margin = "5dp"
        android:layout_gravity = "center"
        android:text="@string/choose"/>

    <ImageButton
        android:id="@+id/confirm"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/dressok"
        android:layout_margin = "5dp"
        android:layout_gravity = "right"
        android:text="@string/confirm"/>

    </LinearLayout>


</LinearLayout>
